<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/md_light_blue_200" />
            <stroke
                android:color="@color/md_grey_800"
                android:width="1dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/md_grey_200" />
            <stroke
                android:color="@color/md_grey_800"
                android:width="1dp"/>
            <padding
                android:left="@dimen/padding_size_s"
                android:top="@dimen/padding_size_s"
                android:right="@dimen/padding_size_s"
                android:bottom="@dimen/padding_size_s" />
        </shape>
    </item>

</selector>